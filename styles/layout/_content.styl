  padding-bottom:30px
  .list-main-contant
    padding-right:34px
    margin-bottom:10px
  .title
    color:#887f5c
    jl(18px)
  .list-main-contant
    > li
      margin-top:15px
      position:relative
      z-index:0
      &:after
        content:''
        position:absolute
        z-index:1
        sprite($check)
        osl(14px)
        top:50%;
        left:-26px;
        tt(0, -50%)
.header ~ *
  position:relative
  z-index:0
  top:-6px
.content-block
  height:calc(100% - 45px)
  background-color:#fff
  border-radius:10px
  padding:23px 0 23px 23px
  .form-description
    sbi(14px, 1.4)
    color:#000
  .header-content
    height:133px
    padding-right:23px
    position:relative
    z-index:0
    padding-bottom:26px
    &:after
      left:0
      bottom:20px
      content:''
      position:absolute
      z-index:1
      width:calc(100% - 27px)
      background-repeat:repeat-x
      height:2px
      background-image:url(../images/bg/bg-list.png)
.copyright
  color:#fff
  margin-right:9px
  font:11px Tahoma, sans-serif
  dibt()
  margin-top:8px
.switch-article
  margin-top:34px
  after()
  > li
    &:first-child
      float:left
    &:nth-child(2)
      float:right
    a
      text-decoration:none
      color:#cab558
      border-bottom:1px solid #cab558
.pages-small-menu
  padding-left:0
  .content
    max-height:calc(100%)
    padding-left:0
    ul
      margin-left:0
      border-radius:0 9px 9px 0
      position:relative
      z-index:0
      padding-top:1px
      padding-right:10px
      background-color:#efe9cd
      li
        margin-left:29px
        color:#000
        padding-left:30px
        position:relative
        z-index:0
        margin-top:28px
        &:first-child
          margin-top:22px
        &:last-child
          padding-bottom:21px
        &:after
          content:''
          position:absolute
          z-index:1
          sprite($list_icon)
          left:0
          top:-2px
    > *
      margin-left:23px
