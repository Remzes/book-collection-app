.content-main
  width:calc(100% + 20px)
  overflow-x:hidden
  overflow-y:auto
  max-height:298px
  padding:30px 0 0 222px
  position:relative
  z-index:0
  top:-6px
  border-radius:0 9px 9px 9px
  background:rgb(247, 226, 150);
  background:-moz-linear-gradient(left, rgba(247, 226, 150, 1) 0%, rgba(254, 235, 163, 1) 0%, rgba(217, 195, 102, 1) 100%);
  background:-webkit-gradient(linear, left top, right top, color-stop(0%, rgba(247, 226, 150, 1)), color-stop(0%, rgba(254, 235, 163, 1)), color-stop(100%, rgba(217, 195, 102, 1)));
  background:-webkit-linear-gradient(left, rgba(247, 226, 150, 1) 0%, rgba(254, 235, 163, 1) 0%, rgba(217, 195, 102, 1) 100%);
  background:-o-linear-gradient(left, rgba(247, 226, 150, 1) 0%, rgba(254, 235, 163, 1) 0%, rgba(217, 195, 102, 1) 100%);
  background:-ms-linear-gradient(left, rgba(247, 226, 150, 1) 0%, rgba(254, 235, 163, 1) 0%, rgba(217, 195, 102, 1) 100%);
  background:linear-gradient(to right, rgba(247, 226, 150, 1) 0%, rgba(254, 235, 163, 1) 0%, rgba(217, 195, 102, 1) 100%);
