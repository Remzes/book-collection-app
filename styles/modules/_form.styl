.wrapper-search
  position:relative
  z-index:0
  right:2px;
  bottom:4px;
  float:right
  overflow:hidden
  width:11%
  tn(1s)
  &:hover
    width:100%
    .search-form
      >div
        input
          opacity:1
  .search-form
    >div
      position:relative
      z-index:0
      height:28px
      input
        osl(14px,28px)
        padding-left:19px
        width:100%
        height:100%
        display:block
        border:1px solid #adadad
        border-radius:10px
        color:#adadad
        opacity:0
        tn(1s)
        &:focus
          border-color:#0c0c0a
          color:#0c0c0a
      .send
        position:absolute
        z-index:1
        top:50%
        right:8px
        tt(0,-50%)
        sprite($search)
        opacity:.4
.wrapper-subscribe
  margin-bottom:20px
  text-align:right
  margin-top:12px
  input
    width:237px
    height:28px
    osr(14px,28px)
    color:#7f7f7f
    border-bottom:1px solid #cab558
    padding-left:8px
  .send
    margin-left:6px
    sprite($button)
    jdb(18px)
    text-align:center
