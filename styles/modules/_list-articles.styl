.list-articles
  max-height:calc(100% - 160px)
  overflow auto
  width:100%
  > li
    margin-top:23px
    padding:24px 23px 0 0
    position:relative
    z-index:0
    &:first-child
      margin-top:0
      padding-top:0
      &:after
        display:none
    &:after
      left:0
      content:''
      position:absolute
      z-index:1
      width:calc(100%- 23px)
      background-repeat:repeat-x
      height:2px
      background-image:url(../images/bg/bg-list.png)
    &:after
      top:0
    >a
      width:100%
      dibt()
      img
        margin-bottom:23px
        width:100%
        border-radius:9px
    .title
      jdb(20px)
      a
        text-decoration:none
        color:#000
        tn(.5s)
        &:hover
          color:#cab558
    .info-block
      border-top:1px solid #cab558
      margin:14px 0
      after()
      padding-top:10px
      > *
        color:#9c8f4d
        jdb()
      .views
        padding-left:25px
        float:left
        position:relative
        z-index:0
        &:after
          content:''
          position:absolute
          z-index:1
          sprite($views)
          left:0
          top:1px
      .time
        float:right
    > p
      color:#000
      osr(14px, 1.3)
      font-weight normal
      .more
        text-decoration:none
        osi(14px, 1.3)
        color:#a29552
        border-bottom:1px solid #d9d4be