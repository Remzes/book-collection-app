.pages-small-menu
  &.cooperation
    padding-bottom:110px
    position:relative
    z-index:0
    .footer
      position:absolute
      z-index:1
      left:0
      bottom:20px
      background-color:#cab558
      text-align:center
      padding:20px 0 16px
      width:100%
      h1
        color:#000
        jdb(18px)
        text-transform:uppercase
        padding-bottom:10px
      a
        padding-bottom:1px
        text-decoration:none
        color:#fff
        position:relative
        z-index:0
        border-bottom:1px solid #fff
        &:after
          content:''
          position:absolute
          z-index:1
          sprite($email)
          top:0
          left:-35px
  .tabs-block
    .tab-container
      >ul
        margin-left:-23px
    .list-switcher
      padding-right:0
      border-radius:0
      margin-bottom:40px
      border-bottom:1px solid #cab558
      padding-bottom:0
      background:none
      font-size:0
      > li
        position:relative
        z-index:0
        margin-top:0
        margin-left:1% !important
        padding-left:0
        padding-bottom:0 !important
        dibt()
        bottom:-1px
        &:first-child
          margin-left:0 !important
          margin-top:0
          width:23%
        &:nth-child(2)
          width:30%
        &:nth-child(3)
          width:45%
        &:after
          display:none
        > a
          width:100%
          border:1px solid #cab558
          border-radius:6px 6px 0 0
          display:block
          height:48px
          text-decoration:none
          color:#000
          jdb(15px)
          position:relative
          z-index:0
          background-color:#fbf9ed
          &:after
            content:''
            position:absolute
            z-index:1
            width:100%
            height:3px
            background-color:#fff
            left:0
            bottom:-2px
            opacity:0
          &.active, &:hover
            background-color:#fff
            &:after
              opacity:1
          span
            padding:0 10px
            dibt()
            position:absolute
            z-index:1
            top:50%
            tt(0, -50%)
            left:0
