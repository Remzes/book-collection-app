.contacts
  h1
    position:relative;
    z-index:0
    jl(30px)
    margin:0 23px
    color:#000;
    border-bottom:1px solid #cab558
    margin-bottom:28px
  .contacts-info
    margin:0 23px 23px
    after()
    .info
      float:left
      width:315px
      > li
        margin-left:33px
        position:relative
        z-index:0
        margin-bottom:18px
        &:last-child
          margin-bottom:0
        &:after
          content:''
          position:absolute
          z-index:1
          left:-25px
          top:-2px
          sprite($location)
        > a
          margin-left:12px
          dibt()
          osb(14px)
          color:#cab558
        &:first-child
          osl(16px)
          margin-bottom:20px
          color:#000
        &:nth-child(2)
          &:after
            sprite($mail)
        &:nth-child(3)
          &:after
            sprite($skype)
    .phones
      float:right
      width:275px
      margin-right:10px
      > li
        &:first-child
          position:relative
          z-index:0
          margin-bottom:7px
          &:after
            content:''
            position:absolute
            z-index:1
            left:-31px
            top:-2px
            sprite($phones)
          p:last-child
            margin-top:7px
        p
          color:#000
          osl(14px)
          &.phone
            osr(24px)
            margin-top:5px