.wrapper-thank{
  &.load{
    opacity:1
  }
  opacity:0
  tn(.7s)
  box-shadow: 0 0 10px rgba(0,0,0,0.5);
  position:fixed;
  z-index:3000;
  width:960px;
  height:360px;
  margin-left:-480px;
  margin-top:-150px;
  background-color:#fff;
  text-align:center;
  left:50%;
  top:50%;
  padding:5px 50px 0
  .close{
    position:absolute;
    z-index:1;
    display:block;
    margin-left:-17px;
    left:50%;
    bottom:38px;
    cursor:pointer;
    >span{
      sprite($cross_black);
      display:block;
    }
  }
  .wrapper-thank-content{
    margin:35px auto 0;
    span{
      display:block
      text-align:center;
      color:#000;
      pr(40px)
      &:nth-child(2){
        margin-top:20px
        font-size:40px
      }
      &:nth-child(3){
        margin-top:7px
        font-size:35px
      }
    }
  }
}